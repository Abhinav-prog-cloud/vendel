{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Attach to Chrome",
        "port": 9222,
        "request": "attach",
        "type": "chrome",
        "webRoot": "${workspaceFolder}"
    },
    {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:5500",
        "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Vendel Frontend",
      "program": "${workspaceFolder}/index.html",
      "runtimeExecutable": "live-server",
      "runtimeArgs": ["--open"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}